{
  "manifest_version": 3,
  "name": "AutoHat - Auto-Solving TopHat Questions",
  "description": "AutoHat detects and answers TopHat questions in real-time.",
  "version": "1.0",

  "action": {
    "default_popup": "hello.html",
    "default_icon": "images/tophat.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "http://127.0.0.1:9222/*"
  ],

  "host_permissions": ["https://app.tophat.com/*"],

  "background": {
    "service_worker": "scripts/background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://app.tophat.com/*"],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ]
}
