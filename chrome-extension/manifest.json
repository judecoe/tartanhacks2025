{
  "manifest_version": 3,
  "name": "TopHat Extractor",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://app.tophat.com/*"],
      "js": ["scripts/content.js"]
    }
  ]
}
