{
  "manifest_version": 3,
  "name": "AutoHat - Auto-Solving TopHat Questions",
  "description": "AutoHat detects and answers TopHat questions in real-time.",
  "version": "1.0",

  "action": {
    "default_popup": "hello.html",
    "default_icon": "images/tophat.png"
  },

  "permissions": ["storage", "activeTab", "scripting", "tabs", "debugger"],

  "host_permissions": ["https://app.tophat.com/*"],

  "background": {
    "service_worker": "scripts/background.js"
  }
}
